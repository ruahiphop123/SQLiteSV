<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/hinhAnh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:roundPercent="@integer/material_motion_duration_long_1"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boy" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="170dp"
        android:background="@drawable/background_thongtin_line"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hinhAnh"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtMaSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/underline_black"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="Mã sv:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="@drawable/underline_black"
            android:text="Họ tên:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtSDT"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/underline_black"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="SĐT:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="Email:"
            android:textSize="18sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>